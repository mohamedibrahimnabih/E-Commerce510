<main>
    <div class="container-fluid bg-trasparent my-4 p-3"
         style="position: relative">
        <div class="row row-cols-1 row-cols-xs-2 row-cols-sm-2 row-cols-lg-4 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="~/images/@item.Img"
                             class="card-img-top"
                             alt="..." />
                        <div class="card-body">
                            <div class="clearfix mb-3">
                                <span class="float-start badge rounded-pill bg-primary">@item.Name</span>
                                <span class="float-end price-hp">@item.Price.ToString("c")</span>
                            </div>
                            <h5 class="card-title">
                                Lorem, ipsum dolor sit amet consectetur adipisicing elit. Veniam
                                quidem eaque ut eveniet aut quis rerum. Asperiores accusamus harum
                                ducimus velit odit ut. Saepe, iste optio laudantium sed aliquam
                                sequi.
                            </h5>
                            <div class="text-center my-4">
                                <a href="https://localhost:7048/Home/Details/@item.Id" class="btn btn-warning">Check offer</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</main>