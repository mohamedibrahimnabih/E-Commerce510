<div class="container-fluid">
    <div class="row mb-3">
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="display-6 m-0">All Categories</h2>
            <a href="/Category/CreateNew" class="btn btn-success">
                <i class="bi bi-plus-square"></i> Create new category
            </a>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.Id</th>
                            <td>@item.Name</td>
                            <td>
                                <a class="btn btn-warning rounded me-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger rounded">
                                    <i class="bi bi-trash3-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>