<div class="row mb-3">
    <div class="d-flex justify-content-between align-content-center">
        <div class="display-6">All Categories</div>
        <a href="/Category/CreateNew" class="btn btn-success"><i class="bi bi-plus-square"></i> Create new category</a>
    </div>
</div>

<div class="row mt-3">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>
                        <a class="btn btn-warning rounded"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a class="btn btn-danger rounded"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>